{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./assets/js",
    "stripInternal": true,
    "paths": {
      "*": ["*", "phoenix_live_view/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./assets/js/types"
  },
  "include": [
    "./assets/js/phoenix_live_view/*.js",
    "./assets/js/phoenix_live_view/*.ts"
  ]
}
