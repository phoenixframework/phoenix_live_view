{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./assets/js",
    "stripInternal": true,
    "paths": {
      "*": [
        "*",
        "phoenix_live_view/*"
      ]
    },
    "declaration": true,
    "outDir": "./assets/js/dist"
  },
  "include": [
    "./assets/js/phoenix_live_view/*.js",
    "./assets/js/phoenix_live_view/*.ts"
  ],
  "exclude": [
    "node_modules",
    "assets/test/**/*"
  ]
}